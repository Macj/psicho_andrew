<div class="card" style="width: 25rem; float: left; margin-right: 10px; height: 800px; max-height: 800px">
  <img class='img-thumbnail ' src="<%= card.logo.url %>" class="card-img-top" style="height: 400px; min-height: 400px" alt="...">
  <div class="card-body" style="height: 70px; max-height: 70px">
    <h5 class="card-title"><%= card.name %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= "#{card.visit_num} консультаций по" if (card.visit_num && card.visit_num > 1) %> <%= card.term %> </li>
  </ul>
  <div class="card-body" style="height: 140px; max-height: 140px">
    <p class="card-text"><%= card.description%></p>
  </div>
  <ul class="list-group list-group-flush" style="text-align: center">
    <li class="list-group-item" >
      <h5 style="margin-bottom: 10px"> Стоимость: </h5>
      <%- if card.price_hr == 0 %>
        БЕСПЛАТНО
      <%- else %>
        <%= card.price_hr %> ГРН. | <%= card.price_rb %> РУБ. | <%= card.price_dl %> EUR
      <% end %> 
    </li>
  </ul>
  
  <div class="card-body">
    <a  class='btn btn-success' style="margin-left:auto; display: block" href="#" class="card-link">Заказать</a>
  </div>
</div>