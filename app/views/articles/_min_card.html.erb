<%- card_title = defined?(title) ? title : card.title %>
<%- card_body = defined?(body) ? body.html_safe : strip_tags( card.body[0..70] ).split(' ').join(' ') %>

<div class="card  text-white dwn-corner-30" style="width: 285px; height: 205px;  float: left; margin: 5px; margin-right: 40px;
margin-left: 40px; margin-bottom: 50px">
  <%= image_tag(card.image.url, class: 'card-img ', style: "height: 155px" )  %>
  <div class="under-line" style="width: 285px; height: 60px;" >
    <div class=" dwn-corner-30 shadow-up line-blue" style=" ">
      <h5 class="card-title" style="color: #2d76b3; font-size: 17px;"><%= card_title %></h5>
    </div>
    <div class=" card-img-overlay dwn-corner-30"  style="height: 50px; margin-top: 155px; ; z-index:3; height: max-content; vertical-align: middle; padding: 0.6rem">
      <a class="find_out_card" ref='<%= card.id%>' id='find_out_card<%= card.id%>' style="text-decoration: none;  color: white; text-align: center; " data-toggle="collapse" href="#collapseCard<%= card.id%>" role="button" aria-expanded="false" aria-controls="collapseCard<%= card.id%>">
        <h5 class="card-title" style="font-size: 17px;"><%= card_title %></h5>
      </a>
      <a style="text-decoration: none; color: white"  class="find_out" ref='<%= card.id%>' id="find_out<%= card.id%>" href="<%= article_path(card)%>">
        <h5 class="card-title">Узнать метод лечения >> </h5>
      </a>
    </div>
    <div class="collapse" id="collapseCard<%= card.id%>" style="float: left;  z-index:10; position: absolute; color: black; ">
      <div class="card dwn-corner-30 sub-card-body" ref='<%= card.id%>' style="height: max-content; margin-left: -1px; width: 285px">
        <div class="card-body" >
          <p class="card-text"><%= card_body  %></p>
        </div>
      </div>
    </div>
  </div>
</div>


