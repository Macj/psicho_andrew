- content_for :filters do
  .card-level{ style: "float: left;" }
    = parent_links(card.cathegory) 
  .actions{ style: "float: right;" }
    = link_to 'Править', edit_article_path(card), class: 'btn btn-info'
    = link_to 'Удалить', card, class: 'btn btn-danger', method: :delete, data: { confirm: 'Уверен?' }

.container.article{ style: "margin-left: 100px; border-color: black; width: 1100px" }
  = image_tag(card.image.url, class: 'img-fluid', style: 'max-width: 100%; height: auto;') if card.image.exists?    
  
  .card{ style: "width: 70%; margin-left: 10%; margin-top:  -110px;" }
    .card-body  
      %h5.card-title
        = link_to card.title, card
      %h6{style: 'float:left'}
        = # TODO author
        Андрей Ткаченко
      .date{style: 'float:right'}
        = card.created_at.strftime("%d.%m.%Y")
      - unless current_user.nil?
        %br
        .edit{style: 'float:right'}
          = link_to "Редактировать", edit_article_path(card)
      .share-block{style: "margin-top: 40px; margin-left: 25%; border-color: black; height: 50px; width: 50%;"}
        = social_share_button_tag("Share", :allow_sites => %w(vkontakte facebook telegram twitter))


  .article-body
    %p
      = card.body.html_safe

%h6.article-body
  Tags:
  = card.tags


.right
  %br
  %br
  %h5{style: "margin-left: 200px"} Товары
  - @courses.each do |course|
    = render partial:  'courses/min_card', locals: {card: course}
  %br
  %h5{style: "margin-left: 200px"} Новинки
  - @news.each do |n|
    = render partial: "articles/card", locals: {card: n} 
  

- if !@latest.empty?
  .container-fluid.latest
    %h5 Новое в разделе
    - @latest.each do |art|
      = render partial: "articles/card", locals: {card: art, is_left: true} 