<form  id="search" action="/articles" method="get" >
  <div class="input-group" style="float:right; width:350px">
    <div class="col-sm-10" style="padding-right: 0px;">
      <input type="text" name='query' class="form-control" placeholder="Search" aria-label="Search" aria-describedby="btnGroupAddon">
    </div>
    <div class="input-group-append" style="margin-left:-2px">
      <button class="btn btn-outline-secondary" type="button" style="border-color: #c3c3c3">
        <%= image_tag('/assets/icon/search.png', id: 'search_submit', style:'height: 20px') %>
      </button>
    </div>
  </div>
</form>