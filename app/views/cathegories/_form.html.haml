.form-group.pl-5
  = form_for @cathegory do |f|
    - if @cathegory.errors.any?
      #error_explanation
        %h2= "#{pluralize(@cathegory.errors.count, "error")} prohibited this cathegory from being saved:"
        %ul
          - @cathegory.errors.full_messages.each do |message|
            %li= message

    .form-group.row
      = f.label :parent, class: 'col-sm-1'
      = f.select :parent_id,  Cathegory.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: 'form-control'
    .form-group.row
      = f.label :is_pro, class: 'col-sm-1'
      = f.check_box :is_pro, class: 'form-control'
    .form-group.row
      =# f.label :parent_link, class: 'col-sm-1'
      =# f.text_field :parent_link, class: 'form-control'
    .form-group.row
      = f.label :level, class: 'col-sm-1'
      = f.text_field :level, class: 'form-control'
    .form-group.row
      = f.label :logo, class: 'col-sm-1'
      = f.file_field :logo, class: 'form-control'
    .form-group.row
      = f.label :name, class: 'col-sm-1'
      = f.text_field :name, class: 'form-control'
    .form-group.row
      = f.label :visible, class: 'col-sm-1'
      = f.check_box :visible, class: 'form-control'
    .actions
      = f.submit 'Save', class: 'btn btn-info'
      