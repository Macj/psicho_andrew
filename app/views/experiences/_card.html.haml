- left = defined?(is_left) ? "float:left" : ""
.card.ml-5.mt-5{ style: "width: 18rem; #{left}" }
  = image_tag(card.logo.url, class: 'img-thumbnail  m-3') if card.logo.exists?
  .card-body
    .card-level
      = card.from.to_s + "-" + card.till.to_s
    %h5.card-title
      = link_to card.title, card
    %h6
      place: 
      = card.place

    = link_to 'Открыть', card, class: '.btn.btn-primary'
    = link_to 'Удалить', card, class: 'pl-5', method: :delete, data: { confirm: 'Are you sure?' }
