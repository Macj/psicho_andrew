%h1 Listing faqs

%table
  %thead
    %tr
      %th Query
      %th Answer
      %th
      %th
      %th

  %tbody
    - @faqs.each do |faq|
      %tr
        %td= faq.query
        %td= faq.answer
        %td= link_to 'Show', faq
        %td= link_to 'Edit', edit_faq_path(faq)
        %td= link_to 'Destroy', faq, method: :delete, data: { confirm: 'Are you sure?' }

